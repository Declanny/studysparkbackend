# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/studyspark
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/studyspark

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d  # Token expiration (e.g., 15m, 1h, 7d, 30d)

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Email & Notifications
SENDGRID_API_KEY=
FROM_EMAIL=noreply@studyspark.dev

# Optional: WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=
